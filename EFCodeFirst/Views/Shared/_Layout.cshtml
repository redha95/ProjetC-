@inherits System.Web.Mvc.WebViewPage


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Views/Default/Index.cshtml")" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1>School Application</h1>
            </div>

          

            <div id="menucontainer">

                <ul id="menu">
                    <li>@Html.ActionLink("Ajouter un niveau", "AjouterStandard", "Default")</li>
                    <li>@Html.ActionLink("Supprimer tout les etudiants", "Supprimer", "Default")</li>
                    <li>@Html.ActionLink("Modifier", "Modifier", "Default")</li>
                    <li>@Html.ActionLink("Ajouter un etudiant","AjouterEtudiant","Default")</li>
                    <li>@Html.ActionLink("Supprimer un etudiant","SupprimerEtudiant","Default")</li>

                </ul>

            </div>
        </div>
        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>
</body>
</html>